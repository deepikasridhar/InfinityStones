{
    "root": true,
    "env": {
     "es6": true,
     "node": true,
     "browser": true
    },
    "extends": [ "airbnb", "plugin:import/warnings" ],
    "rules": {
        "semi": ["error", "never"],
        "prefer-destructuring": ["warn", {
            "array": true,
            "object": true
          }, {
            "enforceForRenamedProperties": false
          }]
    },
    "parserOptions": {
     "ecmaVersion": 6,
     "sourceType": "module",
     "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
     }
    }
   }